#!/bin/sh
source resources

case $BLOCK_BUTTON in
	1) notify-send -t 1500 "updating news..."; kill -36 $(pidof dwmblocks);;
	2) st -e vim $0;;
	3) if pgrep -c newsboat > 0; then notify-send -u critical -i $warning "another instance of newsboat is already runing"; exit; else st -e newsboat ;fi;;
esac

printf "$(newsboat -x reload print-unread | awk '{ if ($1 != "Error:" && -z $1) print "ï‡˜ "$1}')\n"
